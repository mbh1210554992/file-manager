<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jmy.dao.DeptMapper">
    <resultMap id="deptResult" type="com.jmy.model.Dept">
        <id property="id" column="id"/>
        <result property="level" column="level"/>
        <result property="name" column="name"/>
        <result property="parentId" column="parent_id"/>
        <result property="operator" column="operator"/>
        <result property="operatorTime" column="operator_time"/>
        <result property="remark" column="remark"/>

    </resultMap>
    <select id="findObjects" resultType="map">
        SELECT d.id,d.name, p.name AS parent_name, d.parent_id as pid
        FROM dept d LEFT JOIN dept p
        on d.parent_id = p.id;
    </select>
    <select id="findById" resultType="com.jmy.model.Dept">
        select name, parent_id, remark from dept where id = #{id};
    </select>
</mapper>